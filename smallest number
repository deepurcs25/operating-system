#include <stdio.h>

int main() {
    int n, i;

    printf("Enter the size of the array: ");
    scanf("%d", &n);

    int arr[n];

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    int smallest = arr[0];
    int position = 0;

    for(i = 1; i < n; i++) {
        if(arr[i] < smallest) {
            smallest = arr[i];
            position = i;
        }
    }

    printf("Smallest number = %d\n", smallest);
    printf("Position = %d\n", position + 1);

    return 0;
}
